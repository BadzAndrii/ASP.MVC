@using Lab2Server.Models

@model ListBookModels

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List</h2>

<div>
    @using (Html.BeginForm("Create", "Books", FormMethod.Post))
    {
        <p>
            @Html.LabelFor(m => m.Name);
            @Html.EditorFor(m => m.Name);
        </p>
        <p>
            @Html.LabelFor(m => m.Year);
            @Html.EditorFor(m => m.Year);
        </p>
        <p>

            @Html.LabelFor(m => m.Authors);
            <select multiple="multiple" name="Authors">
                @foreach (var author in Model.ListAuthors)
                {
                    <option value="@author.Key">@author.Value</option>
                }
            </select>
        </p>
        <p>
            @Html.LabelFor(m => m.Description);
            @Html.EditorFor(m => m.Description);
        </p>
        <p>
            @Html.LabelFor(m => m.Description);
            @Html.EditorFor(m => m.Description);
        </p>

        <button>Add Book</button>
    }

        
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Authors)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Books) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Authors)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.Id  }) |
            @Html.ActionLink("Details", "Details", new {  id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
